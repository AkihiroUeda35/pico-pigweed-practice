{
	"name": "Zephyr Pigweed Dev",
	"workspaceFolder": "/workspaces/pw-practice",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".."
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools",
				"ms-vscode.cmake-tools",
				"bufbuild.vscode-buf",
				"nordic-semiconductor.nrf-connect-extension-pack",
				"charliermarsh.ruff",
				"mhutchie.git-graph"
			],
			"settings": {
				"python.defaultInterpreterPath": ".venv/bin/python",
				"python.terminal.activateEnvironment": true
			}

		}
	},
	"remoteUser": "ubuntu",
	"mounts": [
		"source=${localEnv:HOME}/.gemini,target=/home/ubuntu/.gemini,type=bind",
		"source=${localEnv:HOME}/.gitconfig,target=/home/ubuntu/.gitconfig,type=bind,readonly"
	],
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {}
	},
	"postCreateCommand": "sudo /opt/zephyr-sdk-0.17.0/setup.sh -c"
}
