{
	"name": "Zephyr Pigweed Dev",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".."
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools",
				"ms-vscode.cmake-tools",
				"marus25.cortex-debug",
				"trond-snekvik.gnu-mapfiles",
				"bufbuild.vscode-buf"
			]
		}
	},
	"remoteUser": "ubuntu",
	"mounts": [
		"source=${localEnv:HOME}/.gemini,target=/home/ubuntu/.gemini,type=bind"
	],
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {}
	},
	"postCreateCommand": "sudo /opt/zephyr-sdk-0.17.0/setup.sh -c"
}
